@using LMS.Infrastructure.HtmlHelpers

<div class="panel panel-default">
    <div class="panel-body">
        @Html.DialogTitle(value: "Create group chat")
        <form id="lms-chat-create-group-form" class="form-horizontal lms-chat-dialog-form">
            @Html.SimpleFormInput(labelValue: "Group name:", inputId: "lms-chat-group-name")
            @Html.DropDownSelect(labelValue: "Members:", innerDivSpecialClass: "lms-selectpicker", selectionSource: "/Chat/Chat/GetUsers", selectId: "lms-chat-group-members-select")
            @Html.SimpleFormInput(labelValue: "Message:", inputId: "lms-chat-group-message")
            @Html.FormSubmit(value: "Create group", divClass: "form-group", newLine: true, specialBtnClass: "lms-chat-submit-group", type: "button")
        </form>
    </div>
</div>
